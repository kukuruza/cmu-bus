<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
     
    <TextView
        android:id="@+id/scheduleitem_busname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="busName"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/scheduleitem_busdirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scheduleitem_busname"
        android:layout_alignBottom="@+id/scheduleitem_busname"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/scheduleitem_busname"
        android:paddingLeft="10dp"
        android:text="busDirecton"/>
    
    <TextView
        android:id="@+id/scheduleitem_busarrivaltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scheduleitem_busdirection"
        android:layout_alignBottom="@+id/scheduleitem_busdirection"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/scheduleitem_busdirection"
		android:paddingLeft="10dp"
        android:text="arrivalTime"/>
     
</RelativeLayout>